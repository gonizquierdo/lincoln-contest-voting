generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Poll {
  id        Int      @id @default(1)
  isOpen    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  votes     Vote[]
}

model Vote {
  id        Int      @id @default(autoincrement())
  pollId    Int
  option    Int
  voterHash String
  createdAt DateTime @default(now())

  poll Poll @relation(fields: [pollId], references: [id])

  @@unique([pollId, voterHash])
}

model DeviceBinding {
  id          Int      @id @default(autoincrement())
  pollId      Int
  dbt         String   @unique   // device-bound token (UUID)
  status      String   @default("ACTIVE") // ACTIVE, VOTED, DISABLED
  deviceHash  String?           // fingerprint hash (nullable initially)
  webauthnId  String?           // credential id, if enrolled
  votedAt     DateTime?         // set upon successful vote
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([pollId])
}

model FingerprintBlock {
  id         Int      @id @default(autoincrement())
  pollId     Int
  deviceHash String
  createdAt  DateTime @default(now())
  @@unique([pollId, deviceHash])
}